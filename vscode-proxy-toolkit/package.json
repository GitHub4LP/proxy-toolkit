{
  "name": "vscode-proxy-toolkit",
  "displayName": "Proxy Toolkit",
  "description": "Service Worker based URL rewriting for subpath proxy environments",
  "version": "0.1.0",
  "publisher": "proxy-toolkit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/proxy-toolkit/vscode-proxy-toolkit"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "proxy-toolkit.selectMode",
        "title": "Proxy Mode",
        "category": "Proxy Toolkit"
      }
    ],
    "menus": {
      "ports/item/context": [
        {
          "command": "proxy-toolkit.selectMode",
          "group": "proxy-toolkit",
          "when": "proxyToolkit.enabled"
        }
      ]
    },
    "commandPalette": [
      {
        "command": "proxy-toolkit.selectMode",
        "when": "false"
      }
    ]
  },
  "scripts": {
    "prebuild": "node scripts/copy-sw-files.js",
    "build": "npm run prebuild && esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run prebuild && esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "npm run build && vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0"
  }
}
